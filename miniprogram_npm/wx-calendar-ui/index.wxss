/* calendar-ui/index.wxss */
@font-face {
  font-family: "iconfont"; /* Project id 2786858 */
  src:
       url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2'),
       url('//at.alicdn.com/t/font_2786858_bdcv0dmil.woff?t=1630633244130') format('woff'),
       url('//at.alicdn.com/t/font_2786858_bdcv0dmil.ttf?t=1630633244130') format('truetype'),
       url('//at.alicdn.com/t/font_2786858_bdcv0dmil.svg?t=1630633244130#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.Arrow-DoubleSmallUp-Line:before {
  content: "\ea75";
}

.Arrow-DoubleSmallDown-Line:before {
  content: "\ea76";
}

.cu-calendar-wrapper {
  background-color: #fff;
}

.cu-calendar-wrapper .fs-36 {
  font-size: 36rpx;
}

.calendar-header {
  padding: 0 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.calendar-header .title-blue {
  background-color: #00a0e9;
  width: 6rpx;
  border-radius: 6rpx;
  height: 30rpx;
  margin-right: 16rpx;
}

.calendar-week {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.calendar-week .view {
  width: 100rpx;
  text-align: center;
}

.calendar-table {
  padding: 30rpx 0 0;
  transition: height 0.3s;
  align-content: flex-start;
  overflow: hidden;
}

.calendar-table .day {
  position: relative;
  width: 100rpx;
  color: #666;
  text-align: center;
  height: 72rpx;
}

.calendar-table .day .bg {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.calendar-table .day .select {
  width: 56rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: linear-gradient(-60deg, #00A0E9, #00A0E9);
  box-shadow: 0px 5px 16px 0px #d9edf7;
  margin: 0 auto;
}

.calendar-table .day .other-month {
  color: #ccc;
}

.calendar-table .day .spot {
  width: 8rpx;
  height: 8rpx;
  background-color: #00A0E9;
  border-radius: 50%;
  margin: 6rpx auto 0;
}

.calendar-body .show-more {
  padding: 0 0 20rpx;
  width: 100%;
  text-align: center;
}

.flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.direction-column {
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-start {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.flex-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.align-start {
  align-items: flex-start;
}

.align-end {
  align-items: flex-end;
}

.align-stretch {
  align-items: stretch;
}